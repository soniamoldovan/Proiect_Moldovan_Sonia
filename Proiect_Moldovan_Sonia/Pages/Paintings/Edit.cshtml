@page
@model Proiect_Moldovan_Sonia.Pages.Paintings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Painting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Painting.ID" />
            <div class="form-group">
                <label asp-for="Painting.Name" class="control-label"></label>
                <input asp-for="Painting.Name" class="form-control" />
                <span asp-validation-for="Painting.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Artist" class="control-label"></label>
                <input asp-for="Painting.Artist" class="form-control" />
                <span asp-validation-for="Painting.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Price" class="control-label"></label>
                <input asp-for="Painting.Price" class="form-control" />
                <span asp-validation-for="Painting.Price" class="text-danger"></span>
            </div>
            <label asp-for="Painting.MuseumID" class="control-label">Museum</label>
            <select asp-for="Painting.MuseumID" class="form-control" asp-items="ViewBag.PublisherID">
            </select>
            <span asp-validation-for="Painting.MuseumID" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
